<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="team1.com.rnliapp.ContentsActivity">



    <Button
        android:id="@+id/lightBlueButton"
        android:layout_width="174dp"
        android:layout_height="152dp"
        android:text="IMMERSION / HEAT"
        tools:layout_editor_absoluteX="194dp"
        tools:layout_editor_absoluteY="248dp"
        android:background="@android:color/holo_blue_light"/>

    <Button
        android:id="@+id/greenButton"
        android:layout_width="174dp"
        android:layout_height="152dp"
        android:text="INJURY"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="248dp"
        android:background="@android:color/holo_green_light"/>

    <Button
        android:id="@+id/suggestionButton"
        android:layout_width="344dp"
        android:layout_height="75dp"
        android:text="Suggestion: Card x - Desc."
        tools:layout_editor_absoluteX="22dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp"
        android:background="@android:color/holo_red_dark"/>

    <Button
        android:id="@+id/orangeButton"
        android:layout_width="174dp"
        android:layout_height="152dp"
        android:text="ILLNESS"
        tools:layout_editor_absoluteX="194dp"
        tools:layout_editor_absoluteY="89dp"
        android:background="@android:color/holo_orange_light"/>

    <Button
        android:id="@+id/darkBlueButton"
        android:layout_width="174dp"
        android:layout_height="152dp"
        android:autoText="false"
        android:text="CARE / CONTROL"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="89dp"
        android:textColor="@android:color/white"
        android:background="#000066"/>

    <Button
        android:id="@+id/pinkButton"
        android:layout_width="213dp"
        android:layout_height="53dp"
        android:text="PATIENT HANDLING"
        tools:layout_editor_absoluteX="86dp"
        tools:layout_editor_absoluteY="408dp"
        android:background="#ff3399"/>

</android.support.constraint.ConstraintLayout>
