<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="team1.com.rnliapp.InjuryActivity">

    <ScrollView
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >


            <Button
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:id="@+id/card12"
            android:text="TREATMENT OF BURNS"
            android:background="@android:color/holo_green_light"
            android:textSize="25sp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="105dp"
                android:id="@+id/card13"
                android:text="TREATMENT OF FRACTURES"
                android:background="@android:color/holo_green_light"
                android:textSize="25sp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="105dp"
                android:id="@+id/card14"
                android:text="TREATMENT OF CHEST INJURIES"
                android:background="@android:color/holo_green_light"
                android:textSize="25sp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="105dp"
                android:id="@+id/card15"
                android:text="TREATMENT OF SPINAL INJURIES"
                android:background="@android:color/holo_green_light"
                android:textSize="25sp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="105dp"
                android:id="@+id/card16"
                android:text="TREATMENT OF HEAD INJURIES"
                android:background="@android:color/holo_green_light"
                android:textSize="25sp"/>



            </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
